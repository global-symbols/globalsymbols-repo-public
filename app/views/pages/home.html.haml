:ruby
  description 'Browse thousands of free communication symbols and create your own communication boards at Global Symbols.'

  set_meta_tags og: {
    url: root_url,
    type: 'website'
  }

%main.container-xl
  / Header Section with Logo and Summary
  .row.mt-5.mb-4
    .col-12.text-center
      %h1.display-4.mb-4.text-primary{style: 'font-weight: 600;'} Global Symbols
      %p.lead.mb-3 Discover thousands of professionally designed communication symbols for education, healthcare, and accessibility. Create custom boards with our intuitive builder and design new symbols with AI-powered tools that adapt to your specific needs and cultural contexts.

  / Three Main Actions Section
  .row.mb-3
    .col-12.text-center.mb-4
      %h2.display-1.mb-4 Get Started

    .col-md-4.mb-4{style: 'display: flex;'}
      .action-card.text-center{style: 'background: #f8f9fa; border-radius: 15px; padding: 2rem; border: 2px solid #e9ecef; transition: all 0.3s ease; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;'}
        .action-icon.mb-3{style: 'font-size: 4rem; color: #006ABA; display: flex; align-items: center; justify-content: center;'}
          %i.fas.fa-search
        %h3.h4.mb-3.mt-3{style: 'font-weight: 400;'} Explore Symbol Sets
        %p.mb-4 Browse thousands of professionally designed symbols across multiple collections and languages
        %a.btn.btn-primary.btn-lg.mt-auto{href: symbolsets_path, style: 'border-radius: 50px; padding: 0.75rem 2rem; margin-top: 0.5rem;'}
          %i.fas.fa-arrow-right.mr-2
          Explore Now

    .col-md-4.mb-4{style: 'display: flex;'}
      .action-card.text-center{style: 'background: #f8f9fa; border-radius: 15px; padding: 2rem; border: 2px solid #e9ecef; transition: all 0.3s ease; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;'}
        .action-icon.mb-3{style: 'font-size: 2rem; color: #006ABA; display: grid; grid-template-columns: repeat(3, 1fr); gap: 2px; width: 60px; height: 60px; margin: 0 auto;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
          .grid-cell{style: 'background: #006ABA; border-radius: 2px;'}
        %h3.h4.mb-3.mt-3{style: 'font-weight: 400;'} Create Boards
        %p.mb-4 Build custom communication boards with our intuitive board builder tool
        %a.btn.btn-primary.btn-lg.mt-auto{href: "#{bb_url}/boardsets", target: '_blank', style: 'border-radius: 50px; padding: 0.75rem 2rem; color: white; margin-top: 0.5rem;'}
          %i.fas.fa-external-link-alt.mr-2
          Start Building

    .col-md-4.mb-4{style: 'display: flex;'}
      .action-card.text-center{style: 'background: #f8f9fa; border-radius: 15px; padding: 2rem; border: 2px solid #e9ecef; transition: all 0.3s ease; height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;'}
        .action-icon.mb-3{style: 'font-size: 4rem; color: #006ABA; display: flex; align-items: center; justify-content: center;'}
          %img{src: asset_path('home/construction-icon.svg'), alt: 'Design Symbols', style: 'width: 64px; height: 64px; filter: brightness(0) saturate(100%) invert(36%) sepia(93%) saturate(7450%) hue-rotate(200deg) brightness(94%) contrast(95%);'}
        %h3.h4.mb-3.mt-3{style: 'font-weight: 400;'} Design Symbols
        %p.mb-4 Create custom symbols with AI-powered tools that adapt to your specific needs
        %a.btn.btn-primary.btn-lg.mt-auto{href: "#{bb_url}/media", target: '_blank', style: 'border-radius: 50px; padding: 0.75rem 2rem; margin-top: 0.5rem;'}
          %i.fas.fa-robot.mr-2
          Design Now

  :css
    .action-card:hover {
      transform: translateY(-5px) !important;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }

  .row
    .col.mt-5
      %h2.display-1.text-center.mb-5= t('views.pages.home.explore_heading')
      .card-deck.gs-deck-4.symbolsets-card-deck
        = render partial: 'symbolsets/symbolset_card', collection: @symbolsets, cached: -> record { [I18n.locale, record] }
  .row.justify-content-sm-center
    .col-sm-6
      %a.btn.btn-primary.btn-block.mt-4{href: symbolsets_path, style: "max-width: 400px; margin: auto; display: block;"}= t('views.pages.home.explore_button')


  / New Sponsors Section
  .row.mt-5.pt-5.pb-3.bg-light.rounded-2
    .col.text-center
      %h2.display-1.mb-3 Our Sponsors
      %p.lead.mt-2 We are grateful to our sponsors for their generous support in making this project possible.

      .row.justify-content-center.mt-3
        .col-12.col-md-6.bg-light.p-4.d-flex.align-items-center.justify-content-end
          %a{href: "https://www.microsoft.com/en-us/accessibility/innovation", target: "_blank", rel: "noopener noreferrer"}
            %img.sponsor-logo.mr-5{src: asset_path('home/microsoft_logo.png'), alt: 'Sponsor 1', style: 'object-fit: contain;'}
        .col-12.col-md-6.bg-light.p-4.d-flex.align-items-center.justify-content-start
          %a{href: "https://register-of-charities.charitycommission.gov.uk/en/charity-search/-/charity-details/4050067/charity-overview", target: "_blank", rel: "noopener noreferrer"}
            %img.sponsor-logo.ml-5{src: asset_path('home/seneca_trust.png'), alt: 'Sponsor 2', style: 'object-fit: contain;'}

      .col-sm-12.text-center.mt-3.mb-3
        %a.btn.btn-primary.mt-3{href: "about/sponsors"} More about our sponsors


%script{type:"application/ld+json"}
  :plain
    {
      "@context": "https://schema.org",
      "@type":    "WebSite",
      "url":      "https://globalsymbols.com",
      "potentialAction": [{
        "@type":  "SearchAction",
        "target": "https://globalsymbols.com/search?locale=en&query={search_term_string}",
        "query-input": "required name=search_term_string"
      }]
    }
