- title t('devise.views.registrations.edit.page_title')
%main.container-xl
  .justify-content-md-center
    %h1.mb-4= t('devise.views.registrations.change_password.heading')
    = bootstrap_form_for(resource, as: resource_name, url: users_change_password_path, layout: :vertical, label_col: 'col-sm-5', control_col: 'col-sm-7', html: { method: :put }) do |f|
      = f.alert_message t('devise.views.registrations._form.please_fix_errors')

      %p= t('devise.views.registrations.change_password.account_indicator', email: resource.email)

      = f.password_field :current_password, autocomplete: 'current-password', help: t('devise.views.registrations._form.current_password_helper'), required: true

      .row.mt-4
        .col-sm
          = f.password_field :password, autocomplete: 'new-password', help: t('devise.views.registrations._form.new_password_helper', var: @minimum_password_length), label: t('devise.views.registrations._form.new_password'), required: true
        .col-sm
          = f.password_field :password_confirmation, autocomplete: 'new-password', label: t('devise.views.registrations._form.new_password_confirmation'), required: true

      .text-right.mt-4
        = f.primary t('devise.views.registrations.change_password.submit')

    = render 'devise/shared/account_links', cache: true