.d-flex.justify-content-around.align-items-center.mt-5
  - if controller_name != 'sessions'
    %a.btn.btn-link.btn-sm{href: new_session_path(resource_name)}= t('devise.views._shared._links.sign_in')

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    %a.btn.btn-link.btn-sm{href: new_password_path(resource_name)}= t('devise.views._shared._links.forgotten_password')

  - if devise_mapping.registerable? && controller_name != 'registrations'
    %a.btn.btn-link.btn-sm{href: new_registration_path(resource_name)}= t('devise.views._shared._links.sign_up')

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %a.btn.btn-link.btn-sm{href: new_confirmation_path(resource_name)}= t('devise.views._shared._links.new_confirmation')

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %a.btn.btn-link.btn-sm{href: new_unlock_path(resource_name)}= t('devise.views._shared._links.new_unlock')

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      = link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)